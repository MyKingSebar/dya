<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!--左侧的布局-->
    <RelativeLayout
        android:id="@+id/fragment_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_choose"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="医疗机构筛选"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="综合医院"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="专科医院"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="民营诊所"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="动物医疗诊所"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="社区卫生服务站"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb5"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/choose_checkbox_style" />


        </LinearLayout>

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>







