<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar" />
    <ImageView
        android:id="@+id/im_top"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/find_register2"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="41dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/im_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/find_old_img"
            />
        <ImageView
            android:id="@+id/im_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/im_img"
            android:layout_marginLeft="10dp"
            tool:src="@drawable/find_old_img"
            />
    </RelativeLayout>
<Button
    android:id="@+id/bt_photo"
    android:layout_width="75.5dp"
    android:layout_height="25.5dp"
android:background="@drawable/bg_button_blue_line"
    android:text="拍照"
    android:textSize="12sp"
    android:textColor="@color/btn_blue"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="19.8dp"
    />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textSize="14sp"
        android:textColor="#26282E"
        android:text="Pad端采用面部识别登录，需要3张被监护人面部照片，照片角度略有差异即可。"
        android:layout_marginTop="35.7dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
<Button
    android:id="@+id/bt_next"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="59dp"
    android:background="@drawable/bg_gray_btn"
    android:textColor="@color/white"
    android:textSize="17sp"
    android:text="下一步"
    />
</LinearLayout>
