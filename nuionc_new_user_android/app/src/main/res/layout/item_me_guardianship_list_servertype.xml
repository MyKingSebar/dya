<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/color_location" />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.v1.unionc_user.view.CircleImageView
            android:id="@+id/img_message_avator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            tools:src="@drawable/icon_tab_me_select" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#26282E"
            android:textSize="17sp"
            tools:text="熊亚" />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:textColor="#9B9CA0"
            android:textSize="13sp"
            tools:text="父母" />
        <TextView
            android:id="@+id/tv_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已开通"
            android:textColor="#9B9CA0"
            android:textSize="13sp"
            android:paddingRight="10dp"
            android:gravity="right"
            android:visibility="invisible"
            />
<CheckBox
    android:id="@+id/cb"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_marginRight="12dp"
    android:background="@null"
    android:button="@drawable/guardianship_checkbox2"
    />



</LinearLayout>
</LinearLayout>