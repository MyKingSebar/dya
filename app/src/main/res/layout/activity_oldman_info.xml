            android:id="@+id/die"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="医院名称："
            android:textColor="#3F3F3F"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>
</LinearLayout>
