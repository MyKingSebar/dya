<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--中间布局-->

    <RelativeLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="发现周边"
                android:textColor="@color/main_text"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.amap.api.maps2d.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <RelativeLayout
                    android:id="@+id/rel_activity_home_search"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_button_grey3_line">

                    <TextView
                        android:id="@+id/tv_activity_home_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="搜索身边好医生"
                        android:textColor="#999999"
                        android:textSize="14sp"

                        tools:text="搜索身边好医生" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="11dp"
                        android:layout_toLeftOf="@+id/tv_activity_home_search"
                        android:src="@drawable/icon_search2" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="53dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_maptoken"
                    />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/rel_activity_home_search"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_button_grey3_line"
                    android:drawableTop="@drawable/icon_morecenter"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="更多"
                    android:textColor="#4F5360"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_below="@id/rel_activity_home_search"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="316dp"
                    android:background="@drawable/icon_point" />

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_alignParentBottom="true"
                    android:scrollbars="none"
                    android:visibility="gone"></WebView>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <!--右侧的布局-->
    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_choose"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="医疗机构筛选"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="综合医院"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb1"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                style="@drawable/choose_checkbox_style"
                 />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="专科医院"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb2"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                style="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="民营诊所"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb3"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                style="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="动物医疗诊所"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb4"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                style="@drawable/choose_checkbox_style" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/im5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_choose_off_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="社区卫生服务站"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb5"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                style="@drawable/choose_checkbox_style"/>


        </LinearLayout>

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>







