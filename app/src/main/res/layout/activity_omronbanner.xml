<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_actionbar"/>

    <cn.v1.unionc_user.view.BannerView
        android:id="@+id/bannerview"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:background="#ffffff"
        >

    </cn.v1.unionc_user.view.BannerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_buy_omron"
            android:layout_width="324dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_btn_bg"
            android:gravity="center"
            android:text="还没有这个设备，去购买"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_bind_omron"
            android:layout_width="324dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_line_light_green_stroke_btn_bg"
            android:gravity="center"
            android:text="绑定设备"
            android:textColor="#1cc6a3"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
