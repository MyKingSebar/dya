<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.v1.unionc_user.ui.home.health.DossierHeartRateAutoFinishActivity">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_read_pic_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/img_heart_rate_finish_read_pic" />

        <TextView
            android:id="@+id/tv_line_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_read_pic_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:text="本次测量结果是否需要医生读图"
            android:textColor="@color/text_34"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_line_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            tools:text="免费读图（99/100次）"
            android:textColor="@color/text_34"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_line_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_line_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:text="超出免费解读次数后，每次2元。"
            android:textColor="@color/text_153"
            android:textSize="14sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_btn_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/grey_line_btn_bg"
        android:gravity="center"
        android:textColor="@color/text_34"
        android:textSize="18sp"
        android:text="完成测量" />

    <TextView
        android:id="@+id/tv_btn_two"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/green_btn_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="申请读图" />

</LinearLayout>
