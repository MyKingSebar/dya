<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_toolbar_white" />

        <TextView
            android:id="@+id/tv_dossier_hert_rate_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:elevation="3dp"
            android:text="历史记录"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="@drawable/omlbackground"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/im_status"
            android:layout_width="172dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:background="@drawable/im_status_no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dossierheartrate_connect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请绑定设备"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/dossierheartrate_disconnect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="断开连接"
                android:textColor="@color/text_all_green"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_link_device"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:background="@drawable/blue_btn_bg"
            android:gravity="center"
            android:text="连接设备"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_help"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/heart_help"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textColor="#26282E"
            android:text="设备使用帮助"
            android:textSize="15sp"
            android:gravity="center_vertical|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="50dp"
            android:textColor="#9B9CA0"
            android:text="点击查看帮助"
            android:textSize="13sp"
            android:gravity="center_vertical|left"
             />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text=">"
    android:textColor="#93969F"
    android:textSize="10sp"
    android:gravity="center_vertical"
    android:layout_alignParentRight="true"
    android:layout_marginRight="11.5dp"
    />
    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:background="#D3D4D8"
        android:layout_height="0.5dp"></View>

    <RelativeLayout
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/xueya_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textColor="#26282E"
            android:text="血压"
            android:textSize="15sp"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/last_time"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="50dp"
            android:textColor="#9B9CA0"
            android:gravity="center_vertical|left"
            tools:text="3月20日  上午07:27"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#26282E"
            tools:text="98/10"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            />

    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:background="#D3D4D8"
        android:layout_height="0.5dp"></View>
</LinearLayout>
