<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.v1.unionc_user.ui.home.MessageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#4E78F6"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#FFE1E5F2"
            android:textSize="16dp"
            android:visibility="gone"
            tools:text="北京" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll_search"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/tv_city"
            android:layout_toRightOf="@+id/tv_city"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/icon_sanjiao"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:maxLength="5"
            android:maxWidth="120dp"
            android:textColor="#FFE1E5F2"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="锐创国际" />
<View
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="搜索医疗机构"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#4E78F6"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_saoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/icon_saoma"
            android:gravity="center"
            android:text="扫一扫"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_guahao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/icon_xinlvjiance"
                android:gravity="center"
                android:text="智能监测"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="…敬请期待…"
                android:textColor="#FFB6B8BF"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_yihu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/icon_yihushangmen"
                android:gravity="center"
                android:text="医护上门"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="…敬请期待…"
                android:textColor="#FFB6B8BF"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/icon_songyao"
                android:gravity="center"
                android:text="送药上门"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="…敬请期待…"
                android:textColor="#FFB6B8BF"
                android:textSize="11sp" />

        </LinearLayout>


    </LinearLayout>


    <cn.v1.unionc_user.view.BannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />


    <RelativeLayout
        android:id="@+id/rl_recommond"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_hi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_hi"
            android:text="医巴士欢迎您！"
            android:textColor="@color/main_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_recommond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_hi"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            tools:text="向您推荐附近3名家庭医生为您服务！"
            android:textColor="@color/describe_color"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ListView、ScrollView、RecyclerView、Other -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.baoyz.widget.PullRefreshLayout>


</LinearLayout>
