<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.v1.unionc_user.ui.me.PersonalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@drawable/bg_personal2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="center"
                android:src="@drawable/icon_back_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <cn.v1.unionc_user.view.CircleImageView
                android:id="@+id/img_person_avator"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="31dp"
                android:layout_toRightOf="@id/img_person_avator"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="13810205545" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="30dp"
                android:layout_alignBaseline="@+id/tv_number"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_number"
                android:drawableLeft="@drawable/icon_edit"
                android:drawablePadding="6dp"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="22dp"
                android:layout_below="@+id/tv_number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_person_avator"
                android:background="@drawable/bg_rz"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/icon_passed" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/qm_blue"
                    android:textSize="12sp"
                    tools:text="已认证" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_follow_yellow"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="关注/评论"
        android:textColor="@color/main_text"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_doctor_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_doctor_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/qm_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="医护"
                android:textColor="@color/detail_text"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/ll_hospital_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hospital_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/qm_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="医疗机构"
                android:textColor="@color/detail_text"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/ll_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/qm_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="评论"
                android:textColor="@color/detail_text"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_activity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_my_activity"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="我的活动"
        android:textColor="@color/main_text"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-1dp"
        android:background="@color/line" />
    <TextView
        android:id="@+id/tv_my_heart"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/persion_heart"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="心率"
        android:textColor="@color/main_text"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_yaoqing"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_yaoqing"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="邀请好友"
        android:textColor="@color/main_text"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-1dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_kefu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_kefu"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="客服中心"
        android:textColor="@color/main_text"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


</LinearLayout>
